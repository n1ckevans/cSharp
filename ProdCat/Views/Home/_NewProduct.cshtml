@model Product

<h3 class="text-center">New Product</h3>
<hr>

<form asp-controller="Home" asp-action="NewProd">

  <div class="form-group">
    <label asp-for="Name"></label>
    <span class="text-danger font-weight-bold" asp-validation-for="Name"></span>
    <input class="form-control" asp-for="Name">
  </div>
  
  <div class="form-group">
    <label asp-for="Description"></label>
    <span class="text-danger font-weight-bold" asp-validation-for="Description"></span>
    <input class="form-control" asp-for="Description">
  </div>
          
  <div class="form-group">
    <label asp-for="Price"></label>
    <span class="text-danger font-weight-bold" asp-validation-for="Price"></span>
    <input type="number" step="0.01" class="form-control" asp-for="Price">
  </div>
  
  <button class="btn btn-info" type="submit">Create</button>
</form>