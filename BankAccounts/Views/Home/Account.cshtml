@{
    ViewData["Title"] = "Account Info";
}
@model TransactionViewModel
<header>
  <a href="/logout" class="btn btn-primary">Logout</a>
</header>

<div class="text-center">
    <h1 class="display-4 mt-2">Welcome @ViewBag.Name!</h1>
    <span class="text-success">
      Current Balance: @ViewBag.Balance
    </span>
    <h4 class="text-center my-3">Make a transaction</h4>

    <form asp-action="Transact" method="post">
        <div class="form-group">
           <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
           <label class="d-i-block" asp-for="Transaction.Amount">Amount: </label>
           <input type="number" class="form-control-dark text-center d-i-block" asp-for="Transaction.Amount"/>
        </div>
        <div class="text-center">
          <input type="submit" value="Submit" class="btn btn-primary"/>
        </div>
    </form>

    
   <div>
    @if (@Model.Transactions.Count == 0)
    {
        <p class="my-3">No Transactions to display</p>
    }
    else
    { <table class="table table-hover table-striped table-bordered table-sm w-50 mx-auto my-4">
            <thead class="text-center">
                <tr>
                  <th>Date</th>
                  <th>Amount</th></tr>
            </thead>
            @foreach (var trans in @Model.Transactions)
            {
                <tr>
                    <td class="text-center">@trans.CreatedAt</td>
                    <td class="text-right">@trans.Amount</td>
                </tr>
            }
        </table>

    }
</div>



</div>